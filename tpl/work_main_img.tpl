<div id="mainImageA" data-href="{work_href}" style="text-align: center; cursor: pointer;">
    {work_img}
</div>
<div class="wrapContent">
    <div style="margin: 10px 6px;" class="clearfix">
        <div class="phRatingBlk">
            {ph_rating_str}
        </div>
        <div id="addRecAjax">
            {add_rec_str}
        </div>
        <div id="homeAlbumAjax">
            {home_album_str}
        </div>
        <div id="fineartAjax">
            {fineart_str}
        </div>
    </div>
</div>
<div class="wrapContent">
    <table>
        <tr>
            <td class="commAuth">
                {auth_avatar_str}
            </td>
            <td class="commTextTd">
                <div class="commText">
                    <span itemprop="author">{auth_name_str}</span> {auth_premium_badge}
                    <br>
                    <span style="font-weight: 700;" itemprop="name">{ph_name}</span>
                    <br>
                    <span itemprop="description">{ph_comm}</span>
                </div>
            </td>
        </tr>
    </table>
</div>
